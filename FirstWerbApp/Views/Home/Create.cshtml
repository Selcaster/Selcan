@model Todo

<h1>Create Task</h1>
<form asp-action="Create" method="post">
    <label>Title:</label>
    <input asp-for="Title" />
    <label>Description:</label>
    <textarea asp-for="Description"></textarea>
    <label>Deadline:</label>
    <input asp-for="Deadline" type="datetime-local" />
    <button type="submit">Create</button>
</form>
